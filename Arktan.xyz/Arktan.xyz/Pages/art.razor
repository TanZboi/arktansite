@page "/art"
@inject IJSRuntime JSRuntime



<div class="art-page">
    
    <h1>My Artwork</h1>

    <div class="art-gallery">
        @foreach (var image in imageFiles)
        {
            <img src="@image" alt="Artwork" class="art-image"/>
        }
    </div>

    <p>Want to see more? Check out my full gallery on my social media. (run command 'contact')</p>

